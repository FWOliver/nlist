<h1>Test Devices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Serial Number</th>
      <th>OS Version</th>
      <th>UDID</th>
      <th>Location</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @equipment.each do |equipment| %>
      <tr>
        <td><%= equipment.name %></td>
        <td><%= equipment.kindof %></td>
        <td><%= equipment.serial %></td>
        <td><%= equipment.os %></td>
        <td><%= equipment.udid %></td>
        <td><%= equipment.location %></td>
        <td><%= equipment.status %></td>
        <td><%= link_to 'Show', equipment %></td>
        <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
        <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Register a New Test Device', new_equipment_path %>
